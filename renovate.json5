{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "ignorePresets": [
    "docker:pinDigests"
  ],
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchFileNames": [
        "**/!(.devcontainer)"
      ],
      "pinDigests": true
    }
  ]
}